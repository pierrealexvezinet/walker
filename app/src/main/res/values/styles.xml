<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorUmanlife</item>
        <item name="colorPrimaryDark">@color/colorUmanlife</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="android:actionBarSize">10dp</item>
        <item name="actionBarSize">10dp</item>
        <item name="android:listDivider">@color/colorWhite</item>
        <item name="SwipeFlingStyle">@style/SwipeFling</item>
    </style>


    <style name="menu_drawer_style">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:listDivider">@color/colorWhite</item>
    </style>

    <style name="dialogTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:title">Mon titre</item>
        <item name="android:windowTitleBackgroundStyle">@color/colorBlueButton</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:buttonStyle">@style/Base.Animation.AppCompat.Dialog</item>

    </style>

    <style name="AppTheme.Cyan" parent="Theme.AppCompat.NoActionBar">
        ...
        <item name="SwipeFlingStyle">@null</item>
    </style>

    <style name="mCircularProgress">
        <item name="cpd_padding">0dp</item>
        <item name="cpd_initialAngle">0</item>
        <item name="cpd_maxSweepAngle">270</item>
        <item name="cpd_minSweepAngle">1</item>
        <item name="cpd_strokeSize">4dp</item>
        <item name="cpd_strokeColor">@color/colorBlueButtonObjectives</item>
        <item name="cpd_strokeSecondaryColor">@android:color/transparent</item>
        <item name="cpd_reverse">false</item>
        <item name="cpd_rotateDuration">1000</item>
        <item name="cpd_transformDuration">600</item>
        <item name="cpd_keepDuration">200</item>
        <item name="cpd_transformInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="pv_progressMode">buffer</item>
        <item name="cpd_inAnimDuration">0</item>
        <item name="cpd_outAnimDuration">@android:integer/config_mediumAnimTime</item>
    </style>

    <style name="mCircularProgressTransparant">
        <item name="cpd_padding">0dp</item>
        <item name="cpd_initialAngle">0</item>
        <item name="cpd_maxSweepAngle">270</item>
        <item name="cpd_minSweepAngle">1</item>
        <item name="cpd_strokeSize">4dp</item>
        <item name="cpd_strokeColor">@color/transparent</item>
        <item name="cpd_strokeSecondaryColor">@android:color/transparent</item>
        <item name="cpd_reverse">false</item>
        <item name="cpd_rotateDuration">1000</item>
        <item name="cpd_transformDuration">600</item>
        <item name="cpd_keepDuration">200</item>
        <item name="cpd_transformInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="pv_progressMode">buffer</item>
        <item name="cpd_inAnimDuration">0</item>
        <item name="cpd_outAnimDuration">@android:integer/config_mediumAnimTime</item>
    </style>

</resources>
